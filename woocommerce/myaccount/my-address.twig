 # My Addresses
 #
 # This template can be overridden by copying it to yourtheme/woocommerce/myaccount/my-address.php.
 #
 # HOWEVER, on occasion WooCommerce will need to update template files and you
 # (the theme developer) will need to copy the new files to your theme to
 # maintain compatibility. We try to do this as little as possible, but it does
 # happen. When this occurs the version of the template file will be bumped and
 # the readme will list any important changes.
 #
 # @see     https://docs.woocommerce.com/document/template-structure/
 # @package WooCommerce\Templates
 # @version 2.6.0
 #}


{% set customer_id = user.id %}

{% if not fn('wc_ship_to_billing_address_only') and fn('wc_shipping_enabled') %}
	{% set get_addresses = {
    'billing'  : __( 'Billing address', 'woocommerce' ),
		'shipping' : __( 'Shipping address', 'woocommerce' ),
  }|apply_filters(
		'woocommerce_my_account_get_addresses',
		customer_id
	) %}
{% else %}
	{% set get_addresses = {
    'billing'  : __( 'Billing address', 'woocommerce' ),
  }|apply_filters(
		'woocommerce_my_account_get_addresses',
		customer_id
	) %}
{% endif %}

{% set oldcol = 1 %}
{% set col    = 1 %}

<p>
  {{ __( 'The following addresses will be used on the checkout page by default.', 'woocommerce' )|e('html')|apply_filters('woocommerce_my_account_my_address_description') }}
</p>

{% if not fn('wc_ship_to_billing_address_only') and fn('wc_shipping_enabled') %}
	<div class="u-columns woocommerce-Addresses col2-set addresses">
{% endif %}

{% for name,address_title in get_addresses %}

		{% set address = fn('wc_get_account_formatted_address', name) %}
		{% set col     = col * -1 %}
		{% set oldcol  = oldcol * -1 %}

	<div class="u-column{{ col < 0 ? 1 : 2 }} col-{{ oldcol < 0 ? 1 : 2 }} woocommerce-Address">
		<header class="woocommerce-Address-title title">
			<h3>{{ address_title|e('html') }}</h3>
			<a href="{{ fn('wc_get_endpoint_url', 'edit-address', name)|e('esc_url') }}" class="edit">{{ address ? __( 'Edit', 'woocommerce' )|e('html') : __( 'Add', 'woocommerce' )|e('html') }}</a>
		</header>
		<address>
			{{ address ? address|e('wp_kses_post') : __( 'You have not set up this type of address yet.', 'woocommerce' )|e('html') }}
		</address>
	</div>

{% endfor %}

{% if not fn('wc_ship_to_billing_address_only') and fn('wc_shipping_enabled') %}
	</div>
{% endif %}
