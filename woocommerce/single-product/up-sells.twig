{##
 # Single Product Up-Sells
 #
 # This template can be overridden by copying it to yourtheme/woocommerce/single-product/up-sells.php.
 #
 # HOWEVER, on occasion WooCommerce will need to update template files and you
 # (the theme developer) will need to copy the new files to your theme to
 # maintain compatibility. We try to do this as little as possible, but it does
 # happen. When this occurs the version of the template file will be bumped and
 # the readme will list any important changes.
 #
 # @see         https://docs.woocommerce.com/document/template-structure/
 # @package     WooCommerce\Templates
 # @version     3.0.0
 #}
{% if wc.upsells %}

	<section class="up-sells upsells products">

		{% set heading = __( 'You may also like&hellip;', 'woocommerce' )|apply_filters( 'woocommerce_product_upsells_products_heading') %}

		{% if heading %}
			<h2>{{ heading }}</h2>
		{% endif %}

		{% do fn('woocommerce_product_loop_start') %}

			{% for product in wc.upsells %}

				{% set product = fn('get_post', product.id) %}

				{% do fn('setup_postdata', product.id ) %}

				{% do fn('wc_get_template_part', 'content', 'product') %}
        {# {% include "woocommerce/content-product.twig" %} #}


			{% endfor %}

		{% do fn('woocommerce_product_loop_end') %}

	</section>

{% endif %}

{% do fn('wp_reset_postdata') %}
