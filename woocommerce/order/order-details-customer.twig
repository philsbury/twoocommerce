 # @package WooCommerce\Templates
 # @version 3.4.4
 #}

{% set show_shipping = not fn('wc_ship_to_billing_address_only') and wc.order.needs_shipping_address() %}

<section class="woocommerce-customer-details">

	{% if show_shipping %}

	<section class="woocommerce-columns woocommerce-columns--2 woocommerce-columns--addresses col2-set addresses">
		<div class="woocommerce-column woocommerce-column--1 woocommerce-column--billing-address col-1">

	{% endif %}

	<h2 class="woocommerce-column__title">{{ __( 'Billing address', 'woocommerce' ) }}</h2>

	<address>
		{{ wc.order.get_formatted_billing_address( __( 'N/A', 'woocommerce' ) )|e('wp_kses_post') }}

		{% if wc.order.get_billing_phone() %}
			<p class="woocommerce-customer-details--phone">{{ wc.order.get_billing_phone()|e }}</p>
		{% endif %}

		{% if wc.order.get_billing_email() %}
			<p class="woocommerce-customer-details--email">{{ wc.order.get_billing_email()|e }}</p>
		{% endif %}
	</address>

	{% if show_shipping %}

		</div><!-- /.col-1 -->

		<div class="woocommerce-column woocommerce-column--2 woocommerce-column--shipping-address col-2">
			<h2 class="woocommerce-column__title">{{ __( 'Shipping address', 'woocommerce' ) }}</h2>
			<address>
				{{ wc.order.get_formatted_shipping_address( __( 'N/A', 'woocommerce' ) )|e('wp_kses_post') }}
			</address>
		</div><!-- /.col-2 -->

	</section><!-- /.col2-set -->

	{% endif %}

	{% do action( 'woocommerce_order_details_after_customer_details', wc.order ) %}

</section>
