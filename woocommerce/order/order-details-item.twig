{##
 # Order Item Details
 #
 # This template can be overridden by copying it to yourtheme/woocommerce/order/order-details-item.php.
 #
 # HOWEVER, on occasion WooCommerce will need to update template files and you
 # (the theme developer) will need to copy the new files to your theme to
 # maintain compatibility. We try to do this as little as possible, but it does
 # happen. When this occurs the version of the template file will be bumped and
 # the readme will list any important changes.
 #
 # @see https://docs.woocommerce.com/document/template-structure/
 # @package WooCommerce\Templates
 # @version 3.7.0
 #}

{% if true|apply_filters( 'woocommerce_order_item_visible', wc.item ) %}

  <tr class="{{ 'woocommerce-table__line-item order_item'|apply_filters('woocommerce_order_item_class', wc.item, wc.order) }}">

    <td class="woocommerce-table__product-name product-name">
      {% set is_visible        = wc.product and wc.product.is_visible() %}
      {% set product_permalink = (is_visible ? wc.product.get_permalink(item) : '')|apply_filters( 'woocommerce_order_item_permalink', wc.item, wc.order) %}

      {{ (product_permalink ? '<a href="%s">%s</a>'|format(product_permalink, wc.product.get_title()) : wc.product.get_title())|apply_filters( 'woocommerce_order_item_name',wc.item, is_visible ) }} {# wc.item.get_name() #}

      {% set qty          = wc.item.get_quantity() %}
      {% set refunded_qty = wc.order.get_qty_refunded_for_item( wc.item_id ) %}

      {% if refunded_qty %}
        {% set qty_display = '<del>' ~ qty|e('esc_html') ~ '</del> <ins>' ~ qty - (refunded_qty * -1 )|e('esc_html') ~ '</ins>' %}
      {% else %}
        {% set qty_display = qty|e %}
      {% endif %}

      {{ ' <strong class="product-quantity">' ~ '&times;&nbsp;%s'|format(qty_display) ~ '</strong>'|apply_filters('woocommerce_order_item_quantity_html', wc.item) }}

      {% do action( 'woocommerce_order_item_meta_start', wc.item_id, wc.item, wc.order, false) %}

      {% do fn('wc_display_item_meta', wc.item) %}

      {% do action('woocommerce_order_item_meta_end', wc.item_id, wc.item, wc.order, false ) %}
    </td>

    <td class="woocommerce-table__product-total product-total">
      {{ wc.order.get_formatted_line_subtotal( wc.item ) }}
    </td>

  </tr>

  {% if wc.show_purchase_note and wc.purchase_note %}

  <tr class="woocommerce-table__product-purchase-note product-purchase-note">

    <td colspan="2">{{ fn('do_shorcode', purchase_note|e('wp_kses_post'))|wpautop }}</td>

  </tr>

  {% endif %}
{% endif %}
