<li>
	{% do action('woocommerce_widget_product_review_item_start', wc) %}

	<a href="{{ fn('get_comment_link', wc.comment.comment_ID) }}">
		{{ wc.product.get_image() }}
		<span class="product-title">{{ wc.product.get_name() }}</span>
	</a>

  {{ fn('wc_get_rating_html', fn('intval', fn('get_comment_meta', wc.comment.comment_ID, 'rating', true))) }}

	<span class="reviewer">{{ __( 'by %s', 'woocommerce' )|format(fn('get_comment_author', wc.comment.comment_ID)) }}</span>

	{% do action('woocommerce_widget_product_review_item_end', wc) %}
</li>
