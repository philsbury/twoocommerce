{% do action('woocommerce_auth_page_header') %}

<h1>
	{# translators: %s: app name #}
  {{ __( '%s would like to connect to your store', 'woocommerce' )|format(wc.app_name|e) }}
</h1>

{{ fn('wc_print_notices') }}

<p>
	{# translators: %1$s: app name, %2$s: URL #}
	{{ fn('wp_kses_post', __('To connect to %1$s you need to be logged in. Log in to your store below, or <a href="%2$s">cancel and return to %1$s</a>', 'woocommerce')|format(fn('wc_clean', wc.app_name), wc.return_url)) }}
</p>

<form method="post" class="wc-auth-login">
	<p class="form-row form-row-wide">
		<label for="username">{{ __('Username or email address', 'woocommerce') }}&nbsp;<span class="required">*</span></label>
		<input type="text" class="input-text" name="username" id="username" value="{{ request.post.username }}" />
	</p>
	<p class="form-row form-row-wide">
		<label for="password">{{ __('Password', 'woocommerce') }}&nbsp;<span class="required">*</span></label>
		<input class="input-text" type="password" name="password" id="password" />
	</p>
	<p class="wc-auth-actions">
		{{ fn('wp_nonce_field', 'woocommerce-login', 'woocommerce-login-nonce', true, false) }}
		<button type="submit" class="button button-large button-primary wc-auth-login-button" name="login" value="{{ __('Login', 'woocommerce') }}">{{ __('Login', 'woocommerce') }}</button>
		<input type="hidden" name="redirect" value="{{ wc.redirect_url }}" />
	</p>
</form>

{% do action('woocommerce_auth_page_footer' ) %}
